{
  "variables":{
    "client_id":"{{env `CLIENT_ID`}}",
    "client_secret":"{{env `CLIENT_SECRET`}}",
    "subscription_id":"{{env `SUBSCRIPTION_ID`}}",
    "managed_image_name":"Overpass",
    "managed_image_resource_group_name":"export-tool-production",
    "location":"West US"
  },
  "builders": [{
    "type": "azure-arm",
    "client_id": "{{user `client_id`}}",
    "client_secret": "{{user `client_secret`}}",
    "subscription_id": "{{user `subscription_id`}}",
    "managed_image_name":"{{user `managed_image_name`}}",
    "managed_image_resource_group_name":"{{user `managed_image_resource_group_name`}}",
    "os_type": "Linux",
    "image_publisher": "Canonical",
    "image_offer": "UbuntuServer",
    "image_sku": "18.04-LTS",
    "location": "{{user `location`}}",
    "vm_size": "Standard_B2s"
  }],
  "provisioners":[
    {
        "type":"file",
        "source": "motd",
        "destination": "/tmp/motd"
    },
    {
        "type":"file",
        "source": "nginx.conf",
        "destination": "/tmp/nginx.conf"
    },
    {
        "type":"file",
        "source": "fcgiwrap.service",
        "destination": "/tmp/fcgiwrap.service"
    },
    {
        "type":"file",
        "source": "cloudwatch_metrics.py",
        "destination": "/tmp/cloudwatch_metrics.py"
    },
    {
        "type": "shell",
        "script": "./provision.sh",
        "execute_command": "sudo bash {{.Path}}"
    }
  ]
}
